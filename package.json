{
  "name": "modular-integration-system-unified",
  "version": "1.0.0",
  "description": "Modular Integration System",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "node --loader ts-node/esm src/index.ts",
    "build": "tsc",
    "dev": "bash scripts/dev-server.sh",
    "setup": "bash scripts/build-setup.sh",
    "watch": "tsc --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "jest --watch",
    "prepare": "husky install",
    "cleanup": "bash scripts/dependency-cleanup.sh",
    "diagnostics": "bash scripts/dependency-diagnostics.sh",
    "postinstall": "npm run build",
    "prebuild": "npm run lint",
    "predev": "npm run build"
  },
  "dependencies": {
    "@octokit/rest": "^19.0.13",
    "@types/node": "^20.17.14",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "google-auth-library": "^9.0.0",
    "googleapis": "^128.0.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.5",
    "openai": "^4.24.1",
    "reflect-metadata": "^0.2.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "winston": "^3.11.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "tslib": "^2.6.2",
    "type-graphql": "^2.0.0-beta.3",
    "typeorm": "^0.3.20",
    "nodemon": "^3.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-plugin-unused-imports": "^3.2.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.1.2",
    "@types/reflect-metadata": "^0.1.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/*.test.ts"],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix"
    }
  }
}