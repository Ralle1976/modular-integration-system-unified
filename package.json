{
  "name": "modular-integration-system-unified",
  "version": "1.0.0",
  "description": "Modular Integration System",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "node --loader ts-node/esm src/index.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "prepare": "husky install",
    "cleanup": "bash scripts/dependency-cleanup.sh",
    "diagnostics": "bash scripts/dependency-diagnostics.sh"
  },
  "dependencies": {
    "@octokit/rest": "^19.0.13",
    "@types/node": "^20.17.14",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "google-auth-library": "^9.0.0",
    "googleapis": "^128.0.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.5",
    "openai": "^4.24.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-plugin-unused-imports": "^3.2.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.4.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix"
    }
  }
}